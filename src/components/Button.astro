---
const { href = "#", variant = "outline", class: extra = "" } = Astro.props as {
  href?: string
  variant?: "outline" | "solid"
  class?: string
};

const base = "inline-flex justify-center rounded-lg text-sm transition-colors py-2.5 px-3";

const variants = {
  outline: "border border-gray-300 text-gray-700 hover:border-gray-400 active:bg-gray-100 active:text-gray-700/80",
  solid: "font-semibold bg-neutral-800 text-white hover:bg-neutral-900 active:bg-neutral-800 active:text-white/80",
};
---
<a href={href} class={`${base} ${variants[variant]} ${extra}`}>
  <slot />
</a>
